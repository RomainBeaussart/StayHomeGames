enum PlayerType {
    USER
    ADMIN
}

type User {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    email: String! @unique
    password: String!
    nickname: String!
    attribute: Json
    type: PlayerType!
}
# ---- UNDERCOVER --- //

enum UndercoverRole {
    CIVILIAN
    UNDERCOVER
    MRWHITE
    SPECTATOR
}

type UndercoverPlayer {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    user: User! @relation(name:"UndercoverPlayerUser" link: INLINE)
    role: UndercoverRole! @default(value: SPECTATOR)
    word: String
    room: UndercoverRoom! @relation(name:"UndercoverRoomPlayers")
}

type UndercoverRoom {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    players: [UndercoverPlayer!] @relation(name:"UndercoverRoomPlayers")
    host: User! @relation(name:"UndercoverRoomHost")
}

type UndercoverDuo {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    words: [String] @scalarList(strategy: RELATION)
}